@model HoppsWebPlatform_Revamp.Models.ConfigurationViewModel

@{
    ViewBag.Title = "Configuration";
}

<h2>Configuration</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm("SaveConfiguration","Admin",FormMethod.Post))
{
        @Html.ValidationSummary(true)
        @Html.ValidationSummaryValidMessage();
    <fieldset>
        <legend>Director API Key</legend>
        KeyID: @Html.TextBoxFor(x => x.DirectorAPIKey.KeyID)
        @Html.ValidationMessageFor(x => x.DirectorAPIKey.KeyID)
        VCode: @Html.TextBoxFor(x => x.DirectorAPIKey.VCode)
        @Html.ValidationMessageFor(x => x.DirectorAPIKey.VCode)
    </fieldset>
    <fieldset>
    <legend>Corporation API Key</legend>
        KeyID: @Html.TextBoxFor(x => x.CorporationAPIKey.KeyID)
        @Html.ValidationMessageFor(x => x.CorporationAPIKey.KeyID)
        VCode: @Html.TextBoxFor(x => x.CorporationAPIKey.VCode)
        @Html.ValidationMessageFor(x => x.CorporationAPIKey.VCode)
    </fieldset>
    
    <input type="submit" value="Save Changes" />
}
