@model IEnumerable<HoppsWebPlatform_Revamp.Models.WalletJournalEntry>            

<div class='BackgroundFieldBlock' id='WalletTransferCont'>

    <p id="header">Wallet Journal Check</p>

    @if (Model.Count() > 0)
    {
        foreach (HoppsWebPlatform_Revamp.Models.WalletJournalEntry entry in Model)
        {
            <p>@entry.Sender donated @entry.Amount.ToString("n") to @entry.Reciever with reason: @entry.Reason</p>
        }        
    }
    else
    {
     <p>Wallet journal clear</p>   
    }
</div>