@model HoppsWebPlatform_Revamp.Models.PilotProfileViewModel

@{
    ViewBag.Title = Model.PilotName + "'s Profile"  ;
}

<script src="../../Scripts/Account/Account.js" type="text/javascript"></script>
<div class="singleColumn profileDiv">
    <h2>@Model.PilotName</h2>
    <img class="profilePic"
         src="@string.Format("https://image.eveonline.com/Character/{0}_200.jpg", Model.PilotID)" 
         alt="@string.Format("{0}'s Character Image",@Model.PilotName)" />
    <br />
    @if (User.Identity.Name.ToUpper() == Model.PilotName.ToUpper())
    {
        @Html.ActionLink("Manage Account", "Manage", "Account", new {@class="inlineLink"});
    }
    <br />
    <div id='validation-summary-cont'></div>
</div>
